{
  "name": "perfect-pitch-frontend",
  "version": "1.0.0",
  "description": "Tool to practice singing in pitch",
  "private": true,
  "scripts": {
    "start": "webpack serve --config webpack.client.dev.js",
    "build": "webpack --config webpack.client.prod.js",
    "postbuild": "react-snap",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MrDzi/perfect-pitch"
  },
  "author": "Dejan Hadziomerovic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrDzi/perfect-pitch/issues"
  },
  "homepage": "https://checkyourpitch.com/",
  "dependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@types/react-helmet": "^6.1.11",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "js-confetti": "^0.11.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.3.0",
    "react-spinners": "^0.13.8",
    "use-sound": "5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/plugin-proposal-class-properties": "^7.17.12",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^27.5.1",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@webpack-cli/init": "^1.0.3",
    "babel-loader": "^8.2.5",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.1",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.6.2",
    "react-snap": "^1.23.0",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.1",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.3.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-node-externals": "^3.0.0"
  },
  "resolutions": {
    "glob-parent": "6.0.2",
    "ejs": "3.1.8"
  },
  "reactSnap": {
    "source": "dist",
    "crawlFrom": "/",
    "include": [
      "/",
      "/about",
      "/privacy-policy",
      "/terms-conditions",
      "/blog",
      "/blog/history-of-12-tone-western-scale",
      "/blog/what-is-pitch-and-how-to-improve"
    ],
    "skipThirdPartyRequests": true,
    "cacheAjaxRequests": false,
    "preconnectThirdParty": false,
    "fixWebpackChunksIssue": "CRA2",
    "removeBlobs": true,
    "fixInsertRule": true,
    "asyncScriptTags": true,
    "waitForStyles": true,
    "delay": 500,
    "waitUntil": "load",
    "publicPath": "/",
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-extensions"
    ],
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "puppeteerExecutablePath": false,
    "puppeteerHeadless": true,
    "minifyOptions": {
      "collapseBooleanAttributes": true,
      "collapseWhitespace": true,
      "decodeEntities": true,
      "keepClosingSlash": true,
      "sortAttributes": true
    }
  }
}
