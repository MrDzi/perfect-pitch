{
  "include": ["src/**/*", "index.tsx"],
  "exclude": ["node_modules", "**/*.test.*", "**/__tests__/**"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "react",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "types": ["jest", "node", "@testing-library/jest-dom"]
  }
}
