{
  "name": "pitch-practice-tool",
  "version": "1.0.0",
  "description": "Tool to practice singing in pitch",
  "private": true,
  "start": "node index.js",
  "scripts": {
    "start": "node index.js",
    "build:client": "webpack --config webpack.client.prod.js",
    "build:server": "webpack --config webpack.server.js",
    "client": "webpack serve --config webpack.client.dev.js",
    "server": "nodemon",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "lint": "eslint ** --ext .js,.jsx,.ts,.tsx",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrDzi/pitch-practice-tool.git"
  },
  "author": "Dejan Hadziomerovic",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrDzi/pitch-practice-tool/issues"
  },
  "homepage": "https://github.com/MrDzi/pitch-practice-tool#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "@webpack-cli/init": "^1.0.3",
    "babel-loader": "^8.1.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^8.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "mini-css-extract-plugin": "^1.2.1",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "sass-loader": "^10.0.5",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.9",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@types/node": "^14.14.32",
    "express": "^4.17.1",
    "webpack-node-externals": "^2.5.2"
  }
}
